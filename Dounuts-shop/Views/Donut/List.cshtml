@model Dounuts_shop.ViewModels.DonutListViewModel

<style>

.card {
  box-shadow: 1px 1px 5px 0px rgba(82, 82, 82, 0.75);
  transition: all 150ms ease-in-out;
}
.card:hover {
  bottom: -2px;
  left: -2px;
  box-shadow: 0px -2px 4px 1px rgba(80,192,231,0.84);
}
.card:active {
  bottom: 2px;
  left: 2px;
  box-shadow: 0px -2px 4px 1px rgba(80,192,231,0.84);

}
</style>

<br /><br /><br /><br />
<h1> <b style="color: #50c0e7">Our</b> <b style="color: #243b45">Donuts</b></h1>
<h6 class="text-muted"><i>Donuts / @Model.CurrentCategory</i></h6>
<br />
   

  <div class="container">
    <div class="row">
      @foreach (var item in Model.donuts)
      {
      <div class="col-lg-3 d-flex align-items-stretch">
        <div class="card card mb-3" style="width: 30rem; height: 30rem;">
          <img class="card-img-top" src="@item.ImageURL" alt="@item.Name">
          <div class="card-body">
            <h4 class="card-title" style="color: #243b45;">@item.Name</h4>
            <h5><b style="color: #df5879">EGP</b> @item.Price</h5>
              <h6 class="text-muted">@item.ShortDescription</h6>
              <div class="card-footer card-footer p-5 pt-0 border-top-0 bg-transparent row">
                <div class="col-sm-16 text-center" style="padding: 10px;">
                  <a class="btn text-white" style="background-color: #df5879 !important; border-radius: 1em !important;"  
                  asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@item.DonutId">
                    <i class="bi-cart"></i> Add to Cart </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
